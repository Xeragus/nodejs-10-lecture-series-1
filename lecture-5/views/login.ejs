<form style="width: 400px; margin: auto;" class="mt-5" action="/users/login" method="POST">
  <%- include('partials/notifications') %>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp"
            value="<%= typeof email != 'undefined' ? email : '' %>">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control" id="password" value="<%= typeof password != 'undefined' ? password : '' %>">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <hr>
  <a href="/users/register">No account? Register.</a>
</form>