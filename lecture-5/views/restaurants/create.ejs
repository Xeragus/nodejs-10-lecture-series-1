<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg w-100">
        <div class="row w-100 justify-content-between">
          <div class="col-sm-2">
            <div>
              <a class="navbar-brand" href="#">
                <img src="https://freesvg.org/img/chef-restaurant-logo-publicdomainvectors.png" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
                bookatab
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
          </div>
          <div class="col-sm-2 pr-0">
            <div class="collapse navbar-collapse float-right" id="navbarSupportedContent">
              <div>
                <div class="dropdown">
                  <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Boban
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Requests</a>
                    <a class="dropdown-item" href="#">Settings</a>
                    <a class="dropdown-item" href="#">Sign Out</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
      <form action="/restaurants" method="POST" style="max-width: 600px; margin: 0 auto;" class="mt-5">
        <% if (typeof error != 'undefined' && error) { %>
          <div class="alert alert-danger" role="alert">
            <%= message %>
          </div>
        <% } %>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="name">Name</label>
              <input class="form-control" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label for="address">Address</label>
              <input class="form-control" id="address" name="address" value="<%= typeof address != 'undefined' ? address : '' %>">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="email">E-mail</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label for="phone">Phone</label>
              <input class="form-control" id="phone" name="phone" value="<%= typeof phone != 'undefined' ? phone : '' %>">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <label for="area">Area</label></br>
            <div class="input-group mb-3">
              <input type="number" id="area" name="area" value="<%= typeof area != 'undefined' ? area : '' %>" class="form-control">
              <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">&#13217;</span>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="form-group">
              <label for="employees_count">No. of Employees</label>
              <input type="number" name="employees_count" value="<%= typeof employees_count != 'undefined' ? employees_count : '' %>" class="form-control" id="employees_count">
            </div>
          </div>
          <div class="col-sm-4">
            <div class="form-group">
              <label for="tables_count">No. of Tables</label>
              <input type="number" class="form-control" value="<%= typeof tables_count != 'undefined' ? tables_count : '' %>" id="tables_count" name="tables_count">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="<%= typeof has_kitchen != 'undefined' ? has_kitchen : '' %>" id="has_kitchen" name="has_kitchen">
            <label class="form-check-label" for="has_kitchen">
              Kitchen
            </label>
          </div>
        </div>
        <div class="mt-5">
          <button type="button" class="btn btn-danger">Reset</button>
          <button type="submit" class="btn btn-success float-right">Create</button>
        </div>
      </form>
    </div>
  </body>
</html>
