<div class="modal fade" id="create_reservation_<%= restaurant._id %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" style="max-width: 600px;">
    <div class="modal-content">
      <form style="max-width: 600px; margin: 0 auto;" class="mt-5 create-reservation">
        <input type="hidden" name="restaurant_id" value="<%= restaurant._id %>">
        <div class="modal-header">
          <h5 class="modal-title">Make a reservation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% if (typeof error != 'undefined' && error) { %>
            <div class="alert alert-danger" role="alert">
              <%= message %>
            </div>
          <% } %>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="name">Number of people</label>
                <input class="form-control" name="people_count" value="" type="number">
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="name">Number of tables</label>
                <input class="form-control" name="tables_count" value="" type="number">
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="date_time">Specify date & time</label>
            <textarea class="form-control" name="date_time_description" rows="3"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button class="create-reservation-btn btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>